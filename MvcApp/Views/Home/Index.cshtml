
@{
    ViewBag.Title = "Home Page";
}

@model dynamic
<div class="well-lg"></div>
<div class="row">
    <div class="col-md-12">
        
        <div class="btn-toolbar" role="toolbar" style="margin: 0;">
            <div class="btn-group">
                <button type="button" class="btn btn-default">Create datasource</button>
                @Html.ActionLink("Update DataSource", "UpdateDataSource", "Search", null, new { @class = "btn btn-default" })
            </div>
            <div class="btn-group">
                @Html.ActionLink("Create indexer", "CreateIndexer", "Search", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Update indexer", "UpdateIndexer", "Search", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Run indexer", "RunIndexer", "Search", null, new { @class = "btn btn-default" })
                <button type="button" class="btn btn-default">Delete indexer</button>
            </div>
            <div class="btn-group">
                <div class="input-group">
                    <span class="input-group-addon">Terms</span>
                    <input type="text" class="form-control" placeholder="Search terms" id="txtSearchTerms">
                </div>
                <a href="#" class="btn btn-default" id="btnSearch">Search</a>
                @Html.ActionLink("Get", "Get", "Search", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Get All", "GetAll", "Search", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Delete", "DeleteDocuments", "Search", null, new { @class = "btn btn-default" })

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form action="@Url.Action("PostFile", "Search")" method="post" enctype="multipart/form-data">

            <label for="file">Filename:</label>
            <input type="number" id="docId" value="@Model" />
            <input type="file" name="file" id="file" />

            <input type="submit" />
        </form>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Model
    </div>
</div>
<script>

    $('#btnSearch').on('click', function(e) {
        var terms = $('#txtSearchTerms').val();

        var url = '@Url.Action("Search", "Search", new { searchTerms = "_T_" })'.replace('_T_', terms);
        window.location.href = url;
    })

</script>
